/* components/calendar/calendar.wxss */
page{
  font-size: 28rpx;
}
.calendar-box{
  display: flex;
  flex-direction: column;
  height: 100%;
  width: 100%;
  text-align: center;
  position: absolute;
}
.week-title{
  line-height: 100rpx;
  min-height: 100rpx;
  display: flex;
  box-shadow: 0 5rpx 10rpx 0 rgba(100, 100, 100, 0.5);
  color: #f45c8d;
}
.week-item{
  flex: 1;
}
.calendar-body{
  flex: 1;
  height: calc(100% - 100rpx);
  box-sizing: border-box;
  padding: 50rpx 0 100rpx;
}
.calendar-days{
  display: flex;
  flex-wrap: wrap;
  padding: 20rpx 0;
}
.calendar-day{
  height: 90rpx;
  width: 14.28%;
  display: flex;
  margin: 5rpx 0;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}
.calendar-day-line{
  line-height:40rpx;
}
.calendar-weekend{
  color: #f45c8d;
}
.calendar-disable-day{
  color: #bbb;
}
.select-one-day{
  background-color: #f45c8d;
  color: #fff;
  border-radius: 10rpx;
}
.select-start-day{
  background-color: #f45c8d;
  color: #fff;
  border-radius: 10rpx 0 0 10rpx;
}
.select-end-day{
  background-color: #f45c8d;
  color: #fff;
  border-radius: 0 10rpx 10rpx 0;
}
.select-living-day{
  background-color: #f890b1a2;
  color: #fff;
}

/* 按钮 */
.submit-button-box{
  position: absolute;
  left: 0;
  bottom: 20rpx;
  width: 100%;
}
.submit-button{
  width: 500rpx;
  border-radius: 20rpx;
  background-color: #dfdfdf;
  line-height: 88rpx;
  text-align: center;
  margin: 0 auto;
}
.submit-button.active{
  background-color: #f45c8d;
  color: #fff;
}